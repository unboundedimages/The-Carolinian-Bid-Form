<div id="contain" class="container border-main">
    <header>
        <div>
            <h1>
                {{!-- {{errRes.errorMessage}} --}}
                {{errRes.msg2}}
            </h1>
        </div>
        <h2 id="bid-form">
            <div id='home'>

            </div>
            <span id="title" style="cursor:pointer">
                <span style="font-size:30px;" onclick="openNav()">
                    <span class="burger">&#9776;</span>
                </span>
                <span>
                    The Carolinian
                    <b>
                        Bid Form
                    </b>
                </span>
            </span>
        </h2>
    </header>
    <div id="CaroMan"></div>
    {{!-- {{#each rows}} --}}
    <div id="bill">
        <b> Your bill comes out to: <span class="money">{{rows.price}}</span></b>
        <br>
        <div>Record locator: <span class="money2">{{rows.recLoc}}</span></div>
    </div>
    {{!-- {{/each}} --}}
    <div id="ta_3">
        {{!-- {{#if rows.toast}} --}}
        {{!-- <section id="toast2">The information is incorrect.<br>
            Please check your card and try again
        </section> --}}
        {{!-- {{/if}} --}}
        <div id="form-container">
            <div id="sq-ccbox">
                <form id="nonce-form" novalidate action="/thanks" method="post">
                    <div id='error'>
                        <li>
                            {{errRes.msg1}}
                        </li>
                        {{!-- â€¢ &nbsp;&nbsp;&nbsp;&nbsp;{{errRes.msg1}} --}}
                    </div>
                    <table>
                        <tbody>
                            <tr>
                                <td>Card Number:</td>
                                <td>
                                    <div id="sq-card-number"></div>
                                </td>
                            </tr>
                            <tr>
                                <td>CVV:</td>
                                <td>
                                    <div id="sq-cvv"></div>
                                </td>
                            </tr>
                            <tr>
                                <td>Expiration Date:</td>
                                <td>
                                    <div id="sq-expiration-date"></div>
                                </td>
                            </tr>
                            <tr>
                                <td>Postal Code:</td>
                                <td>
                                    <div id="sq-postal-code"></div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <button id="sq-creditcard" class="button-credit-card"
                                        onclick="requestCardNonce(event)">
                                        {{!-- {{#each rows}} --}}
                                        Process for {{this.price}}
                                        {{!-- {{/each}} --}}
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <input id="card-nonce" name="nonce" hidden>
                    {{!-- {{#each rows}} --}}
                    <input type="number" value="{{rows.price2}}" id="_price_" name="_price_" readonly hidden>
                    <input value="{{rows.recLoc}}" id="r_locator" name="rec_locator" readonly hidden>
                    <input value="{{rows.email}}" id="_email_" name="_email_" readonly hidden>
                    <input value="{{rows.price}}" name="price" rreadonly hidden>
                    {{!-- {{/each}} --}}
                    <input type="text" id="did_pay" name="did_pay" value="paid" hidden>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="appId" hidden>{{{reC}}}</div>
