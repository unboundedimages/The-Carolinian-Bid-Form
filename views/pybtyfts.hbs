<div id="contain" class="container border-main">
	<header>
		<h2 id="bid-form">
			<div id='home'>

			</div>
			<span id="title" title="Click to open side navigator" style="cursor:pointer" onclick="openNav()">
				<span style="font-size:30px;" onclick="openNav()">
					<span class="burger">&#9776;</span>
				</span>
				<span>
					The Carolinian
					<b>
						Bid Form
					</b>
				</span>
			</span>
		</h2>
	</header>
	<div id="bid-verify">BID AD preview: </div>
	<div id="ta_2">
		<form id="ontothenext" action='/payment' method="post">
			<div class="black-line">
				<p id="dobr" class="radi">Date of bid runs:</p>
				<div id="review-Date">
					{{#if dates}}
					<div id="date1a" class="radi">
						{{{dates.date1}}}
					</div>
					{{#if dates.date2}}
					<div id="date2a" class="radi">
						{{{dates.date2}}}
					</div>
					{{/if}}
					{{#if dates.date3}}
					<div id="date3a" class="radi">
						{{{dates.date3}}}
					</div>
					{{/if}}
					{{#if dates.date4}}
					<div id="date4a" class="radi">
						{{{dates.date4}}}
					</div>
					{{/if}}
					{{/if}}
				</div>
				<div id="prebi">Preview Bid:</div>
				<p class="barr"></p>
				{{{rec.bid_text}}}
			</div>
			<div id="reviw-Button">
				<input type="text" id="radKey" name="random_key" value="{{{rec.rec_locator}}}" readonly hidden>
				<input type="text" id="radKey_" name="email_" value="{{{rec.email}}}" readonly hidden>
			</div>
		</form>
	</div>
